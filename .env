# ============= AUTHENTICATION & SECURITY =============
WAF_JWT_SECRET=my-super-secret-key
WAF_ADMIN_PASSWORD=my-admin-password

# ============= API CONFIGURATION =============
WAF_AI_HOST=0.0.0.0
WAF_AI_PORT=8000
WAF_AI_DEBUG=true
WAF_AI_LOG_LEVEL=DEBUG

# ============= NGINX NODES (for dev/testing) =============
NGINX_NODES=http://localhost:8081,http://localhost:8082

# ============= NGINX MANAGEMENT (simulate reload for dev) =============
WAF_AI_NGINX_CONFIG_PATH=./docker/shared/waf-rules
WAF_AI_NGINX_RELOAD=echo "Would reload nginx"
WAF_AI_DEPLOY_TIMEOUT=10

# ============= ML MODEL CONFIGURATION =============
WAF_AI_MODEL_PATH=models/waf_model.joblib
WAF_AI_THREAT_THRESHOLD=-0.5
WAF_AI_CONFIDENCE_THRESHOLD=0.8
WAF_AI_RETRAIN_INTERVAL=24

# ============= TRAFFIC COLLECTION =============
WAF_AI_COLLECTION_INTERVAL=1
WAF_AI_MAX_REQUESTS=1000
WAF_AI_CLEANUP_INTERVAL=60

# ============= WAF RULES =============
WAF_AI_RULE_EXPIRY=24
WAF_AI_MAX_RULES=50
WAF_AI_OPTIMIZE_RULES=true

# ============= LOGGING =============
WAF_AI_LOG_FILE=logs/waf_ai.log

# ============= MONITORING =============
WAF_AI_METRICS_ENABLED=true
WAF_AI_METRICS_PORT=9090
